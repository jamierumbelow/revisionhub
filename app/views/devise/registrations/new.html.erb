<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <h1>Not a member yet? Sign Up!</h1>
    <label class="grey" for="signup">Username:</label>
    <%= f.text_field :name, :html => {:class => "field"} %>
    <label class="grey" for="email">Email:</label>
    <%= f.email_field :email, :html => {:class => "field"} %>
    <label class="grey" for="password">Password:</label>
    <%= f.password_field :password, :html => {:class => "field"} %>
    <label class="grey" for="password-conf">Password Confirmation:</label>
    <%= f.password_field :password_confirmation, :html => {:class => "field"} %>
    <input type="submit" name="submit" value="Register" class="bt_register" />
<% end %>
